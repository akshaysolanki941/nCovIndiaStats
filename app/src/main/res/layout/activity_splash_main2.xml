<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashMain2Activity">

    <TextView
        android:id="@+id/tv_india"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/overpass_semi_bold"
        android:text="India"
        android:textColor="#000080"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_ncov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_india"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/overpass_semi_bold"
        android:text="nCov"
        android:textColor="#FF9933"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_india"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/overpass_semi_bold"
        android:text="Stats"
        android:textColor="#138808"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:divider="@drawable/divider"
        android:orientation="horizontal"
        android:padding="5dp"
        android:showDividers="middle"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/overpass_light"
            android:padding="2dp"
            android:text="Developed by\nAkshay Solanki"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/overpass_light"
            android:padding="2dp"
            android:text="Graphics by\nManav Ladha"
            android:textAlignment="center"
            android:textColor="#000000" />

    </LinearLayout>

</RelativeLayout>